{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all-deps",
      "automerge": true,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchPackageNames": [
        "dotnet-sdk{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "GodotSharp{/,}**",
        "Godot.NET.Sdk{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "Chickensoft{/,}**"
      ],
      "allowedVersions": "/^(\\d+\\.\\d+\\.\\d+)(-godot(\\d+\\.)+\\d+(-.*)?)?$/"
    }
  ]
}
